{
  "name": "ollama-chat",
  "displayName": "Ollama Chat",
  "description": "Offline chat with local Ollama models - Cursor-style UI",
  "version": "0.1.0",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Chat",
    "Machine Learning"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ollama-chat",
          "title": "Ollama Chat",
          "icon": "media/chat.svg"
        }
      ]
    },
    "views": {
      "ollama-chat": [
        {
          "type": "webview",
          "id": "ollamaChat.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "ollamaChat.newChat",
        "title": "New Chat",
        "category": "Ollama Chat"
      },
      {
        "command": "ollamaChat.sendSelection",
        "title": "Send to Ollama Chat",
        "category": "Ollama Chat"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ollamaChat.sendSelection",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ollamaChat.chatView.focus",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "!terminalFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "build-vsix": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}
